<!doctype html>

<html lang="en">

<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" type="text/css" href="login.css" >
</head>

<body>
<%- include('partials/navbar') %>
<script>  
          var entry =   <%- type %>;
          console.log(entry);
          document.getElementById("link9").classList.add("active") 
          if(entry === "manager"){
          document.getElementById("link1").remove()
          }
          else{  
          document.getElementById("link2").remove()
          }
          document.getElementById("link3").remove()
          document.getElementById("link4").remove()
          document.getElementById("link6").remove()
          document.getElementById("link7").remove()
          document.getElementById("link8").remove()
          document.getElementById("link9").remove()        

</script>



<div class="row">
  <div class="card col-sm-4 mx-auto">
    <h5 class="card-header text-center">Update Account</h5>
      <div class="card-body">
        <ul>Firstname: <%= man.firstname %> </ul>
        <ul>Lastname: <%= man.lastname %> </ul>
        <ul>Email: <%= man.email %> </ul>


        <form action="/accountpass" method="post" >       
          <label for="fn">Update First Name</label>
          <input type="text" id="fn" name="newfn" placeholder="<%= man.firstname %>">
          <label for="ln">Update Last Name</label>
          <input type="text" id="ln" name="newln" placeholder="<%= man.lastname %>">
          <label for="pass">New Password</label>
          <input type="password" id="pass" name="newpass" placeholder="New Password" required>
          <input class="btn btn-primary" type="submit" value="Update Account">
        </form>
      </div>
  </div>
</div>




<%- include('partials/footer') %>
<%- include('partials/footscripts') %>
</body>
</html>

